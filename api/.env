# Configuración de Base de Datos PostgreSQL
DATABASE_URL=postgresql://localhost:5432/recirculate

# JWT Secret para autenticación
JWT_SECRET=recirculate_jwt_secret_2025_muy_seguro_token_auth

# Configuración de Cloudinary para imágenes
# Registrarse en https://cloudinary.com para obtener estas credenciales
CLOUDINARY_CLOUD_NAME=recirculate-demo
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your_api_secret_here

# Configuración de MercadoPago (completar con tus datos)
MP_ACCESS_TOKEN=tu_mp_access_token
MP_SUCCESS_URL=http://localhost:3001/success
MP_FAILURE_URL=http://localhost:3001/failure
MP_PENDING_URL=http://localhost:3001/pending

# Puerto del servidor
PORT=3001

# Entorno de desarrollo
NODE_ENV=development