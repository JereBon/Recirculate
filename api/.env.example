# Configuración de Base de Datos PostgreSQL
DATABASE_URL=postgresql://usuario:password@localhost:5432/recirculate

# JWT Secret para autenticación
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui

# Configuración de Cloudinary para imágenes
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Configuración de MercadoPago
MP_ACCESS_TOKEN=tu_mp_access_token
MP_SUCCESS_URL=https://tu-dominio.com/success
MP_FAILURE_URL=https://tu-dominio.com/failure
MP_PENDING_URL=https://tu-dominio.com/pending

# Puerto del servidor (opcional, por defecto 3001)
PORT=3001

# Entorno (development, production)
NODE_ENV=development